{{#if products}}

<div class="container">
    {{#each products}}
	<table id="cart" class="table table-hover table-condensed">
    				
                    <thead>
						<tr>
                            
							<th style="width:50%">Product</th>
							<th style="width:10%">Price</th>
							<th style="width:8%">Quantity</th>
							
							<th style="width:10%"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 hidden-xs"><img src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" alt="..." class="img-responsive"/></div>
									<div class="col-sm-10">
										<h4 class="nomargin">{{ this.item.title }}</h4>
										<p> {{ this.item.title }} More Description to come</p>
									</div>
								</div>
							</td>
							<td data-th="Price">{{ this.price }}</td>
							<td data-th="Quantity">
								{{ this.qty}}
							</td>
							
							<td class="actions" data-th="">
								<button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
								<button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>								
							</td>
						</tr>
					</tbody>
					<tfoot>
						<tr class="visible-xs">
							<td class="text-center"><strong>{{totalPrice}}</strong></td>
						</tr>
						<tr>
							<td><a href="http://localhost:3000/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
							<td colspan="2" class="hidden-xs"></td>
							
							
						</tr>
					</tfoot>
                    <td class="hidden-xs text-center"><strong>{{ totalPrice}}</strong></td>
				</table>
                {{/each}}
</div>

<div class="row">
     <div class="">
       <strong>Total:{{ totalPrice}}</strong>
       
     </div>
</div>
<hr>

{{ else }}
<div class="row">
     <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
       <strong>No Items in Cart</strong>
     </div>
</div>

{{/if}}


<span><a href="" class="btn btn-success btn-block" onclick="ajax_response()" >Checkout <i class="fa fa-angle-right"></i></a></span>


